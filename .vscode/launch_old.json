{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Full Stack (FastAPI + React)",
      "configurations": ["FastAPI", "Vite dev server", "Debug React Frontend"]
    }
  ],
  "configurations": [
    {
      "name": "FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["backend.main:app", "--reload", "--port", "8000"],
      "justMyCode": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Vite dev server",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/frontend"
    },
    {
      "name": "Debug React Frontend",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontend/src",
      "trace": true,
      "sourceMaps": true
    }
  ]
}
